extends layout

block content
    .w3-container
        header.w3-container.w3-card-4.w3-purple
            h2 Lista de Tipologias
    .w3-container
        table.w3-table-all
          tr
            th ID
            th Estado
            th Sigla
            th Designação
          each i in lista
            tr
              td
                a(href="http://localhost:3002/" + i.id)=i.id 
              td=i.estado
              td=i.sigla
              td=i.designacao