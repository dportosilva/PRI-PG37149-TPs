extends layout
block content
    .w3-container
        header.w3-container.w3-card-4.w3-teal
            h1 Gestor de Alunos
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registrar Aluno
            .w3-container
                form.w3-container(action='/alunos' method='POST')
                    br
                    label
                        b Utilizador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='utilizador')
                    label 
                        b Nome 
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    br
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
                br            
        .w3-card-4
            br
            table.w3-table
                tr
                    th Utilizador
                    th Nome
                    th Curso
                each i in lista
                    tr  
                        td= i.utilizador
                        td= i.nome
                        td= i.curso
                        td
                          button.w3-blue-grey(onclick="verNotas('" + i.utilizador + "')") Notas
                        td
                          button.w3-blue-grey(onclick="excluiAluno('" + i.utilizador + "')") Apagar
        footer.w3-container.w3-teal
            address Desenvolvido por Diego Porto
  
